@model CrimeReportingSystem.Models.Entity.Report

@{
    ViewData["Title"] = "Incident Report";
}

<h2>Incident Report #@Model.ReportID</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Report Details</h5>
        <p class="card-text"><strong>Report Date:</strong> @Model.ReportDate.ToShortDateString()</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
        <p class="card-text"><strong>Details:</strong> @Model.ReportDetails</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>
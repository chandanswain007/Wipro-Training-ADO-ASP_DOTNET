@model BookstoreApp.Models.Book
@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div>
    <h4>Book Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ISBN)</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="mt-4">
    <form asp-page="/Cart" asp-page-handler="AddToCart" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Add to Cart</button>
    </form>
</div>
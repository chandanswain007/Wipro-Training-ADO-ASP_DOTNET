@model AdvancedRazorPages.Models.Product

<div class="card my-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <h6>Categories:</h6>
        <ul>
            @foreach (var category in Model.Categories)
            {
                <li>@category.Name</li>
            }
        </ul>
        <a asp-page="./Details" asp-route-id="@Model.ProductID" class="btn btn-info">View Details</a>
    </div>
</div>
@{
    ViewData["Title"] = "Incidents Management";
}

<div class="container">
    <h2>Crime Analysis and Reporting System</h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create Incident</h5>
                    <p class="card-text">Report a new crime incident</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Status</h5>
                    <p class="card-text">Update status of existing incidents</p>
                    <a href="@Url.Action("Search")" class="btn btn-warning">Search to Update</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Search Incidents</h5>
                    <p class="card-text">Find incidents by criteria</p>
                    <a href="@Url.Action("Search")" class="btn btn-info">Search</a>
                </div>
            </div>
        </div>
    </div>
</div>
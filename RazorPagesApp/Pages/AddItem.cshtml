@page
@model AddItemModel
@{
    ViewData["Title"] = "Add Item";
}

<h1>Add New Item</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="NewItem.Name" class="control-label"></label>
                <input asp-for="NewItem.Name" class="form-control" />
                <span asp-validation-for="NewItem.Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>